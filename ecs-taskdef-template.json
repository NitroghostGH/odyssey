{
  "family": "ODYSSEY_TASK_FAMILY_PLACEHOLDER",
  "networkMode": "awsvpc",
  "executionRoleArn": "ECS_EXECUTION_ROLE_ARN_PLACEHOLDER",
  "taskRoleArn": "ECS_TASK_ROLE_ARN_PLACEHOLDER",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "odyssey-web",
      "image": "ECR_IMAGE_URI_PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {"containerPort": 8000, "protocol": "tcp"}
      ],
      "environment": [
        {"name": "DJANGO_SECRET_KEY", "value": "__SECRET_KEY_PLACEHOLDER__"},
        {"name": "DJANGO_DEBUG", "value": "false"},
        {"name": "DJANGO_ALLOWED_HOSTS", "value": "__ALLOWED_HOSTS_PLACEHOLDER__"},
        {"name": "DATABASE_URL", "value": "__DATABASE_URL_PLACEHOLDER__"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "ECS_LOG_GROUP_PLACEHOLDER",
          "awslogs-region": "AWS_REGION_PLACEHOLDER",
          "awslogs-stream-prefix": "odyssey"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/healthz || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    }
  ]
}
